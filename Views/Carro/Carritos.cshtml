@model List<MB>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    
    <img src="~/Images/mb_logo.png"  width="200" height="100">

    <table class="table">
        
        @foreach (var mB in Model) 
        {
            <tr>
                <td>@mB.Nombre</td>
            </tr>    
            <tr>
                <td><img src="~/Images/mb_amggle53.jpg"  width="100" height="85"/></td>
                <td>
                    <form asp-controller="Carro" asp-action="Consultar" method="post">                        
                        <button class="btn btn-primary">Consultar</button>
                    </form>                    
                </td>
            </tr>
        }
    </table>
</div>
